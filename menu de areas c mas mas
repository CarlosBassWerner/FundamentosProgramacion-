#include <iostream>
using namespace std;
int main()
{
float Area=0,b,h,r,l;
int opcion;
do {
 cout<<"Menu"<<endl;
 cout<<"1. Area del tiangulo"<<endl;
 cout<<"2. Area del cuadrado"<<endl;
 cout<<"3. Area de la circuferencia"<<endl;
 cout<<"0. salir"<<endl;
 cout<<"ingrese una opcion"<<endl;
 cin>> opcion;
  switch (opcion) {
  case 1 :
  cout<<"ingrese la base";
  cin>>b;
  cout<<"ingrese la altura";
  cin>>h;
  Area=(b*h)/2;
  cout<<"El area del triangulo es:"<<Area<<endl;
  break;
  case 2:
  cout<<"ingrese lado";
  cin>>l;
  Area=l*l;
  cout<<"el area del cuadrado es"<<Area<<endl;
  break;
  case 3:
  cout<<"infrese radio";
  cin>>r;
  Area=3.1416*(r*r);
  cout<<"el rarea del circulo es:"<<Area<<endl;
  break;
  case 0:
  cout<<"saliendo";
  break;
  default:
  cout<<"error";
  }
}
while (opcion!=0);
return 0;
}
