
#include <iostream>
using namespace std;
int main()
{
 int n,i, factorial;
 cout<<"Dame un valor n: ";
cin>>n;
while (n<0) {
    cout<<"el numero debe ser mayor o igual a 0 intente de nuevo: ";
    cin>>n;
}
factorial=1;
i=1;
while (1<=n) {
    factorial=factorial*i;
    i=i+1;
}
cout<< "El factorial de "<<n<<factorial<<endl;
    return 0;
}
