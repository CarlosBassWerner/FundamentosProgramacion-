#include <iostream>
#include <cmath>
using namespace std;
int main()
{
float a,b,c,raiz,x1,x2;
cout<<"Introduzca la variable a:";
cin>>a;
cout<<"Introduzca la variable b:";
cin>>b;
cout<<"Introduzca la variable c:";
cin>>c;
if (a==0)
{
    cout<<"Error"<<endl;
}
else
{
    raiz=sqrt(pow(b,2)-4*a*c);
    x1=(-b+raiz)/(2*a);
    x2=(-b-raiz)/(2*a);
    cout<<"las soluciones son x1 igual a:"<<x1<<"y x2 igual a:"<<x2<<endl;
}

    return 0;
}
