#include <iostream>

using namespace std;

int main()
{
    int cantidad,opcion;
    float precio, tp, suma = 0;
    do {
        precio = 0;
        cout << "MENU" << endl;
        cout << "1.Hamburguesa" << endl;
        cout << "2. Hamburguesa con queso" << endl;
        cout << "3.Papas fritas" << endl;
        cout << "4. Soda" << endl;
        cout << "0.Salir" << endl;
        cout << "Ingrese su opcion:" << endl;
        cin >> opcion;
        switch (opcion) {
        case 1: precio = 3;
            break;
        case  2: precio = 5;
            break;
        case 3: precio = 2;
            break;
        case 4:precio = 2.5;
            break;
        case 0: cout << "Saliendo";
            break;
        default:
            cout << "Error";
        }
        if (precio > 0) {
            cout << "Ingrese la cantidad:";
            cin >> cantidad;
            tp = precio * cantidad;
            suma = suma+tp;
        }
    } while (opcion != 0);
    cout<< "el total es" << suma << endl;
}
